{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.record_view'|trans({'%id%': record.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.record_view'|trans({'%id%': record.id|default('')}) }}</h1>
    {% if record is defined and record|length %}
        <dl>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{ record.title }}</dd>
            <dt>{{ 'label.content'|trans }}</dt>
            <dd>{{ record.comment }}</dd>
        </dl>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}